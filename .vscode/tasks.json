{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "${fileDirname}/*.cpp",
                "DRAM.cpp","MMU.cpp","Cache.cpp","test_cache.cpp",
                "-I",
                "${fileDirname}/",
                "-o",
                "${fileDirname}/.tmp_build/Debug",
                "-DDEBUG",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
    ],
    "version": "2.0.0"
}